
<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Hi there !</h1>
      <p>Tu trouveras ici l'ensemble des evenements à venir</p>
      <p><a class="btn btn-secondary" href="<%= new_event_path %>" role="button">Créer ton event »</a></p>  
    </div>
  </div>

   
    <div class="container">
      <!-- Example row of columns -->       
      <div class="row">
        <% @events.each do |event| %>  
          <div class="col-md-4">
            <h2><%= event.title %></h2>
            <p>Description : <%= event.description %></p>
            <p>Date de début : <%= event.start_date %></p>
            <p>Durée : <%= event.duration %></p>
            <p>Prix : <%= event.price %></p>
            <p>Lieu : <%= event.location %></p>
            <p><a class="btn btn-secondary" href="<%= event_path(event) %>" role="button">View details »</a></p>
          </div>  
        <% end %> 
      </div>    
      <hr> 
    </div> <!-- /container -->
  
</main>